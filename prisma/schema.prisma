// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String

  roles Role[]
}

model Role {
  id   String @id @default(cuid())
  name String

  users User[]
}

model Travel {
  id           String   @id @default(cuid())
  isPublic     Boolean
  slug         String   @unique
  name         String   @unique
  description  String
  numberOfDays Int
  moods        String[]

  tours Tours[]
}

model Tours {
  id           String   @id @default(cuid())
  travelId     String
  name         String   @unique
  startingDate DateTime
  endingDate   DateTime
  price        Int

  travel Travel @relation(fields: [travelId], references: [id])
}
